# Development Environment Configuration
# Copy this to .env.development and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
LIVE_TRADING=false

# API Credentials (use paper/test credentials if available)
ZERODHA_API_KEY=your_api_key_here
ZERODHA_ACCESS_TOKEN=your_access_token_here

# Trading Configuration (Conservative for development)
ACCOUNT_BALANCE=100000
MAX_RISK_PER_TRADE=0.005
MAX_POSITION_SIZE=0.05
MAX_DAILY_LOSS=0.01
MAX_DRAWDOWN=0.03
MAX_OPEN_POSITIONS=3
MAX_TRADES_PER_DAY=10

# Strategy Configuration
ADX_THRESHOLD_STRONG=20
ADX_THRESHOLD_MODERATE=15
MIN_SIGNAL_CONFIDENCE=60
SIGNAL_COOLDOWN_SECONDS=120

# Data Configuration
WEBSOCKET_RECONNECT_MAX_ATTEMPTS=3
WEBSOCKET_RECONNECT_DELAY=5
TICK_BUFFER_SIZE=500
OHLC_MAX_CANDLES=100
