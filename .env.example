# Zerodha Algo Trader - Docker Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# Application Ports
# ============================================================================
API_PORT=8000
DASHBOARD_PORT=8501

# ============================================================================
# Database (PostgreSQL/TimescaleDB)
# ============================================================================
POSTGRES_DB=algotrader
POSTGRES_USER=trader
POSTGRES_PASSWORD=trader_password_change_me
POSTGRES_PORT=5432

# ============================================================================
# Redis (Caching & State)
# ============================================================================
REDIS_PASSWORD=redis_password_change_me
REDIS_PORT=6379

# ============================================================================
# Optional Tools
# ============================================================================
# PgAdmin
PGADMIN_EMAIL=admin@algotrader.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Commander
REDIS_COMMANDER_PORT=8081

# ============================================================================
# Notes:
# ============================================================================
# 1. NEVER commit .env file to version control
# 2. Change all default passwords before production use
# 3. Use docker-compose --profile tools up to start optional tools
